{
  "name": "server",
  "version": "1.0.0",
  "main": "server.js",
  "license": "MIT",
  "scripts": {
    "serve": "nodemon server.ts",
    "build": "tsc",
    "test": "NODE_ENV=test jest"
  },
  "nodemon_config": {
    "watch": [
      "*"
    ],
    "ext": "ts,json",
    "ignore": [
      "node_modules",
      "test"
    ],
    "execMap": {
      "ts": "ts-node"
    },
    "delay": 2500
  },
  "dependencies": {
    "@types/express": "^4.17.19",
    "@types/supertest": "^2.0.14",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jest": "^29.7.0",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.14",
    "@types/jest": "^29.5.5",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1"
  }
}
