{
  "name": "server",
  "version": "1.0.0",
  "main": "server.js",
  "license": "MIT",
  "scripts": {
    "serve": "nodemon server.ts",
    "build": "tsc"
  },
  "nodemon_config": {
    "watch": ["*"],
    "ext": "ts,json",
    "ignore":["node_modules", "test"],
    "execMap": {
      "ts": "ts-node"
    },
    "delay": 2500
  },
  "dependencies": {
    "@types/express": "^4.17.19",
    "express": "^4.18.2",
    "jest": "^29.7.0",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1"
  }
}
